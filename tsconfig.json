{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext", "es2018", "esnext.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "baseUrl": ".",
    "paths": {
      "@/public/*": ["public/*"],
      "@/pages/*": ["src/pages/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/components/*": ["src/components/*"],
      "@/modules/*": ["src/modules/*"],
      "@/utils/*": ["src/utils/*"],
      "@/server/*": ["src/server/*"],
      "@/functions/*": ["modules/*"],
      "@/store/*": ["src/store/*"],
      "@/types": ["src/utils/types.ts"],
      "@/styles/*": [ "styles/*"],
      "@/theme/*": [ "theme/*"],
      "@/theme": [ "theme/index.ts"],
      "@/repo/*": [ "src/server/repository/*"],
      "@/svc/*": [ "src/server/services/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts","**/*.tsx"],
  "exclude": ["node_modules",]
}
